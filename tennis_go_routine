// This sample program demonstrates how to use an unbuffered
// channel to simulate a game of tennis between two goroutines.
package main

import (
	"fmt"
	"math/rand"
	"sync"
	"time"
)

var (
	wg sync.WaitGroup
)

func init() {
	rand.Seed(time.Now().UnixNano())
}

func main() {
	wg.Add(2)
	court := make(chan int)
	
	go player("Nadal", court)
	go player("Federer", court)

	court <- 1

	wg.Wait()
}

func player(name string, court chan int) {
	defer wg.Done()
	for {
		ball, ok := <-court
		if !ok {
			fmt.Println(name, "wins")
			return
		}
		n := rand.Intn(100)
		if n%13 == 0 {
			println(name, "missed")
			close(court)
			return
		}

		fmt.Println(name, "hit", ball)
		ball++
		court <- ball

	}
}
